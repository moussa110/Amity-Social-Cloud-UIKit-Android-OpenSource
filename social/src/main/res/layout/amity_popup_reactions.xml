<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/fb_darker_gray_bg"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/amity_padding_xs"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="@dimen/amity_padding_xs"
            android:paddingBottom="@dimen/amity_padding_xs"
            android:paddingStart="@dimen/amity_padding_m2"
            android:paddingEnd="@dimen/amity_padding_m2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/likeIv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/amity_ic_circle_like" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/loveIv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/love_128" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/wowIv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/wow_128" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/angryIv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/angry_128" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sadIv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/sad_128" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/reactionFlow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:flow_horizontalGap="@dimen/amity_padding_s"
                app:constraint_referenced_ids="likeIv,loveIv,wowIv,sadIv,angryIv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>