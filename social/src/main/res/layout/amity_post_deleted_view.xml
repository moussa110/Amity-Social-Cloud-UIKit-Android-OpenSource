<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="gone"
    tools:visibility="visible"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/ivRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/amity_ic_remove_28"
        app:tint="@color/fb_icon_light_gray" />

    <TextView
        android:id="@+id/deletedMsg"
        style="@style/AmityTextStyleBodyBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:layout_marginStart="@dimen/amity_padding_s"
        android:maxLines="6"
        android:text="@string/amity_deleted_post_msg"
        android:textColor="@color/fb_icon_light_gray" />


</LinearLayout>