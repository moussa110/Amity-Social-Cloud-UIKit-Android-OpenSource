<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pinnedView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/amity_padding_xs"
        android:background="@color/fb_darker_gray_post_bg"
        android:descendantFocusability="blocksDescendants"
        android:focusableInTouchMode="false"
        android:paddingTop="@dimen/amity_padding_xs"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pinIv"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/amity_padding_m1"
            android:adjustViewBounds="true"
            android:src="@drawable/pinned_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/fb_icon_light_gray" />


        <TextView
            style="@style/AmityTextStyleTitleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/amity_padding_s"
            android:text="@string/pinned_post"
            android:textColor="@color/fb_text_light_gray"
            app:layout_constraintBottom_toBottomOf="@id/pinIv"
            app:layout_constraintStart_toEndOf="@id/pinIv"
            app:layout_constraintTop_toTopOf="@id/pinIv" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pinnedPostRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/amity_padding_xs"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/pinIv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.amity.socialcloud.uikit.community.newsfeed.view.AmityBasePostView
        android:id="@+id/basePostView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        app:layoutManager="LinearLayoutManager" />

</LinearLayout>