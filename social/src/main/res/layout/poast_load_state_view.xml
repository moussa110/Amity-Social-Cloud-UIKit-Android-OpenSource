<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/amity_padding_xs"
    android:background="@color/fb_darker_gray_post_bg"
    android:padding="@dimen/amity_padding_s">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatarView"
                style="@style/AmityCircularAvatarStyle"
                android:layout_width="@dimen/amity_forty"
                android:layout_height="@dimen/amity_forty"
                android:layout_marginStart="@dimen/amity_padding_m1"
                android:background="@color/shimmer_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/tv1"
                style="@style/AmityCircularAvatarStyle"
                android:layout_width="120dp"
                android:layout_marginStart="@dimen/amity_padding_s"
                android:layout_height="12dp"
                android:layout_marginTop="@dimen/amity_padding_xxs"
                app:layout_constraintTop_toTopOf="@id/avatarView"
                app:layout_constraintStart_toEndOf="@id/avatarView"
                android:background="@color/shimmer_color" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/tv2"
                style="@style/AmityCircularAvatarStyle"
                android:layout_width="160dp"
                android:layout_marginStart="@dimen/amity_padding_s"
                android:layout_height="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                android:layout_marginTop="@dimen/amity_padding_xxs"
                app:layout_constraintStart_toEndOf="@id/avatarView"
                android:background="@color/shimmer_color" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/postView"
                android:layout_width="match_parent"
                app:shapeAppearanceOverlay="@style/AmityRoundedCornerImage12"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_height="40dp"
                app:layout_constraintCircleRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/avatarView"
                android:layout_marginTop="@dimen/amity_padding_s"
                android:background="@color/shimmer_color" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>