<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:focusable="true"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_menu_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"

        android:tint="@color/amityColorWhite"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/bottom_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AmityTextStyleBodyBold"
        android:textColor="@color/amityColorWhite"
        android:text="@{menuItem.title}"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"/>

</LinearLayout>